<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/sub_text_size"
        android:textColor="@color/text_blue_on"
        android:text="提示：非管理员请不要随意操作，以免影响音响的正常使用"
        />
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout 
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_gravity="center"
		    android:gravity="center"
	        >
	        
	        <LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:padding="20dp"
			    >
			    <TextView 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="音量调节"
			        />
			    
			    <SeekBar 
			        android:id="@+id/sb_device_controll_voice"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			        android:layout_marginTop="10dp"
			        />
			</LinearLayout>
			
			<View 
			    android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:layout_marginLeft="20dp"
			    android:layout_marginRight="20dp"
			    android:background="@color/spacebar"
			    />
			
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:padding="20dp"
			    >
			    <TextView 
			        android:id="@+id/tv_device_controll_state_hint"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="播放状态"
			        />
			    <TextView 
			        android:id="@+id/tv_device_controll_state"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			        android:layout_marginTop="10dp"
			        style="@style/ButtonTranslucent_1"
			        android:text="播放"
			        android:textColor="@color/text_blue_on"
			        />
			</LinearLayout>
			<View 
			    android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:layout_marginLeft="20dp"
			    android:layout_marginRight="20dp"
			    android:background="@color/spacebar"
			    />
			
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:padding="20dp"
			    >
			    <!-- <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        >
			        <TextView 
				        android:id="@+id/tv_device_controll_next_hint"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:text="切换歌曲:"
				        />
			        <TextView 
				        android:id="@+id/tv_device_controll_next_cur_music"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:text="空闲"
				        android:textSize="@dimen/normal_text_size"
				        android:textColor="@color/text_blue_on"
				        />
			    </LinearLayout> -->
			    <TextView 
			        android:id="@+id/tv_device_controll_next_hint"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="切换歌曲:"
			        />
		        <TextView 
			        android:id="@+id/tv_device_controll_next_cur_music"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="空闲"
			        android:textSize="@dimen/normal_text_size"
			        android:textColor="@color/text_blue_on"
			        />
			    <TextView 
			        android:id="@+id/tv_device_controll_next_do"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_horizontal"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			        android:layout_marginTop="10dp"
			        style="@style/ButtonTranslucent_1"
			        android:text="下一首"
			        android:textColor="@color/text_blue_on"
			        />
			    
			</LinearLayout>
	    </LinearLayout>
    </ScrollView>
    
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_alignParentBottom="true"
	    />
    
</RelativeLayout>