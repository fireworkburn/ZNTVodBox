<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/center_bg" >
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/view_song_infor_bottom"
        >
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="false"
            android:layout_marginLeft="12dp"
	        android:layout_marginRight="12dp"
	        android:layout_marginTop="12dp"
	        android:background="@drawable/style_view_bg_frame"
            >
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="26dp"
                >
                <TextView 
		            android:id="@+id/tv_song_infor_name"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/title_text_size"
		            android:textColor="@color/text_black_on"
		            />
		        <TextView 
		            android:id="@+id/tv_song_infor_artist"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="6dp"
		            android:textSize="@dimen/normal_text_size"
		            android:textColor="@color/text_black_mid"
		            />
            </LinearLayout>
	        
	        <View
	            android:id="@+id/view_song_infor_space1" 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/spacebar"
                android:layout_marginTop="2dp"
                />
	        <com.znt.diange.view.ItemTextView
                android:id="@+id/itv_song_infor_coin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="18dp"
                ></com.znt.diange.view.ItemTextView>
	        
	        
	        <View 
	            android:id="@+id/view_song_infor_space2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/spacebar"
                android:layout_marginTop="2dp"
                />
	        
	        <com.znt.diange.view.EditTextView
	            android:id="@+id/et_song_infor_message"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="26dp"
	            android:layout_marginRight="26dp"
	            ></com.znt.diange.view.EditTextView>
	        
	        <View 
	            android:id="@+id/view_song_infor_space3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/spacebar"
                android:layout_marginTop="2dp"
                />
            
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:padding="26dp"
	            >
	            <TextView 
	                android:id="@+id/tv_song_infor_user_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="left"
	                android:textColor="@color/text_black_on"
	                android:textSize="@dimen/normal_text_size"
	                />
	            
	            <TextView 
	                android:id="@+id/tv_song_infor_coin"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="left"
	                
	                android:textColor="@color/text_black_on"
	                android:textSize="@dimen/normal_text_size"
	                android:visibility="gone"
	                />
	        </LinearLayout>
	        
	        <View 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#e2e2e2"
                />
	        
	        <LinearLayout
	           android:id="@+id/view_song_infor_bottom" 
	           android:layout_width="fill_parent"
	           android:layout_height="wrap_content"
	           android:orientation="horizontal"
	           android:paddingTop="22dp"
	           android:paddingBottom="22dp"
	           android:background="@color/center_bg"
	           >
	           
	           <TextView 
	                android:id="@+id/tv_song_infor_delete"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1.0"
	                android:layout_marginRight="4dp"
	                android:paddingLeft="12dp"
	                android:paddingRight="12dp"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="10dp"
	                style="@style/ButtonNormal"
	                android:text="删除"
	                android:clickable="true"
	                />
	           <TextView 
	                android:id="@+id/tv_song_infor_confirm"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1.0"
	                android:layout_marginLeft="4dp"
	                android:paddingLeft="12dp"
	                android:paddingRight="12dp"
	                android:layout_gravity="center_vertical"
	                android:layout_marginRight="10dp"
	                style="@style/ButtonNormal"
	                android:text="更新信息"
	                android:clickable="true"
	                />
	           
	           <TextView 
		           android:id="@+id/tv_song_infor_stop"
		           android:layout_width="fill_parent"
		           android:layout_height="wrap_content"
		           android:layout_marginLeft="12dp"
		           android:layout_marginRight="12dp"
		           android:paddingLeft="12dp"
		           android:paddingRight="12dp"
		           android:layout_gravity="center_vertical"
		           android:gravity="center_horizontal"
		           style="@style/ButtonNormal"
		           android:text="停止播放"
		           android:clickable="true"
		           />
	       </LinearLayout>
        </LinearLayout>
        
    </ScrollView>
    <!-- <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar"
        android:layout_above="@+id/view_song_infor_bottom"
        /> -->
       
</RelativeLayout>