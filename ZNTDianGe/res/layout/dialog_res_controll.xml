<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="bottom"
    android:id="@+id/view_paly_res_dialog_bg"
    android:background="@color/transparent">
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:paddingBottom="28dp"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
    	android:gravity="center_vertical"
    	android:background="@color/transparent"
        >
        <ProgressBar 
            android:id="@+id/pb_res_controll_dialog"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminateDuration="700" 
            android:paddingBottom="12dp"
            android:visibility="gone"
            />
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            >
            <RelativeLayout 
                android:id="@+id/view_res_controll_dialog_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="12dp"
                android:background="@drawable/sel_item_bg"
                >
                <TextView 
	                android:id="@+id/tv_res_controll_dialog_one"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_toLeftOf="@+id/iv_res_controll_dialog_one"
	                android:textSize="@dimen/title_text_size"
	                android:textColor="@color/text_black_on"
	                android:text="允许点播三方歌曲"
	                />
                <TextView 
	                android:id="@+id/tv_res_controll_dialog_one_sub"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@+id/tv_res_controll_dialog_one"
	                android:layout_toLeftOf="@+id/iv_res_controll_dialog_one"
	                android:textSize="@dimen/sub_text_size"
	                android:textColor="@color/text_black_mid"
	                android:text="允许点播全部歌曲"
	                />
                
                <ImageView 
                    android:id="@+id/iv_res_controll_dialog_one"
                    android:layout_width="32dp"
		            android:layout_height="32dp"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:src="@drawable/icon_selected"
		            android:visibility="invisible"
                    />
                
            </RelativeLayout>
            
            <View 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/spacebar_0"
                />
            <RelativeLayout 
                android:id="@+id/view_res_controll_dialog_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="12dp"
                android:background="@drawable/sel_item_bg"
                >
                <TextView 
	                android:id="@+id/tv_res_controll_dialog_two"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_toLeftOf="@+id/iv_res_controll_dialog_two"
	                android:textSize="@dimen/title_text_size"
	                android:textColor="@color/text_black_on"
	                android:text="禁止点播三方歌曲"
	                />
                <TextView 
	                android:id="@+id/tv_res_controll_dialog_two_sub"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@+id/tv_res_controll_dialog_two"
	                android:layout_toLeftOf="@+id/iv_res_controll_dialog_two"
	                android:textSize="@dimen/sub_text_size"
	                android:textColor="@color/text_black_mid"
	                android:text="用户只能点播音乐内部歌曲"
	                />
                
                <ImageView 
                    android:id="@+id/iv_res_controll_dialog_two"
                    android:layout_width="32dp"
		            android:layout_height="32dp"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:src="@drawable/icon_selected"
		            android:visibility="invisible"
                    />
                
            </RelativeLayout>
        </LinearLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/spacebar_0"
            />
        <TextView 
            android:id="@+id/tv_res_controll_dialog_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/text_blue_on"
            android:text="取消"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:background="@drawable/sel_item_bg"
            android:textSize="@dimen/title_text_size"
            />
        
    </LinearLayout>
    

</LinearLayout>