<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:padding="6dp"
	    android:background="@drawable/sel_item_bg"
        >
        <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="6dp"
	        >
	        
	        <ImageView 
	            android:id="@+id/iv_song_record_item_cover"
	            android:layout_width="64dp"
	            android:layout_height="64dp"
	            android:layout_alignParentLeft="true"
	            android:scaleType="centerCrop"
	            />
	        
	        <TextView 
	            android:id="@+id/tv_song_record_item_music_name"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignTop="@+id/iv_song_record_item_cover"
	            android:layout_toRightOf="@+id/iv_song_record_item_cover"
	            android:layout_marginLeft="6dp"
	            android:textSize="@dimen/normal_text_size"
	            android:textColor="@color/text_black_on"
	            android:singleLine="true"
	            android:ellipsize="end"
	            />
	        <TextView 
	            android:id="@+id/tv_song_record_item_msg"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/tv_song_record_item_music_name"
	            android:layout_toRightOf="@+id/iv_song_record_item_cover"
	            android:layout_alignBottom="@+id/iv_song_record_item_cover"
	            android:layout_marginLeft="6dp"
	            android:layout_marginTop="4dp"
	            android:textSize="@dimen/sub_text_size"
	            android:textColor="@color/text_black_mid"
	            android:maxLines="3"
	            android:ellipsize="end"
	            />
	        
	    </RelativeLayout>
	    
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/spacebar"
            />
        
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="2dp"
	        >
	        
	        <com.znt.diange.view.CircleImageView 
	            android:id="@+id/iv_song_record_item_user_head"
	            android:layout_width="28dp"
	            android:layout_height="28dp"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="32dp"
	            android:scaleType="centerCrop"
	            />
	        <TextView 
	            android:id="@+id/tv_song_record_item_user_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@+id/iv_song_record_item_user_head"
	            android:layout_marginLeft="2dp"
	            android:textSize="@dimen/sub_text_size"
	            android:textColor="@color/text_black_on"
	            android:singleLine="true"
	            />
	        
	        <LinearLayout 
	            android:id="@+id/view_song_record_item_praise"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="12dp"
	            android:layout_toLeftOf="@+id/view_song_record_item_comment"
	            android:orientation="horizontal"
	            android:clickable="true"
		        android:padding="4dp"
		        android:background="@drawable/sel_item_bg"
	            >
	            <ImageView 
		            android:id="@+id/iv_song_record_item_praise"
		            android:layout_width="22dp"
		            android:layout_height="22dp"
		            android:layout_gravity="center_vertical"
		            android:src="@drawable/sel_praise"
		            />
	            <TextView 
	                android:id="@+id/tv_song_record_item_praise"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:textSize="@dimen/sub_text_size"
	                android:textColor="@color/text_black_mid"
	                />
	        </LinearLayout>
	        <LinearLayout 
	            android:id="@+id/view_song_record_item_comment"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="12dp"
	            android:layout_alignParentRight="true"
	            android:orientation="horizontal"
	            android:clickable="true"
		        android:padding="4dp"
		        android:background="@drawable/sel_item_bg"
	            >
	            <ImageView 
		            android:id="@+id/iv_song_record_item_comment"
		            android:layout_width="22dp"
		            android:layout_height="22dp"
		            android:layout_gravity="center_vertical"
		            android:src="@drawable/sel_comment"
		            />
	            <TextView 
	                android:id="@+id/tv_song_record_item_comment"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:textSize="@dimen/sub_text_size"
	                android:textColor="@color/text_black_mid"
	                />
	            
	        </LinearLayout>
	        
	    </RelativeLayout>
    </LinearLayout>
    

</LinearLayout>