<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_vertical"
    android:id="@+id/view_hint_dialog_bg"
    android:paddingLeft="26dp"
    	android:paddingRight="26dp"
    android:background="@color/transparent">
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:gravity="center_vertical"
    	android:background="@color/white"
        >
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_on"
                android:textSize="@dimen/normal_text_size"
                android:text="升级提示"
                />
            <View 
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="@color/spacebar"
	            />
            <TextView 
                android:id="@+id/tv_dialog_update_hint_infor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_blue_on"
                android:textSize="@dimen/normal_text_size"
                android:text="点播的歌曲会放入点播队列中, 每次只能点播一首歌曲，后面点播的会覆盖队列中的歌曲 "
                />
        </LinearLayout>
        
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/spacebar"
            />
        <TextView 
            android:id="@+id/tv_dialog_update_hint_confirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:textColor="@color/text_blue_on"
            android:text="开始升级"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:background="@drawable/sel_item_bg"
            />
        
    </LinearLayout>
    

</LinearLayout>