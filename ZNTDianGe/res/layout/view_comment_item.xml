<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sel_item_bg_dark"
        android:padding="12dp"
        >
        
        <com.znt.diange.view.CircleImageView 
            android:id="@+id/iv_comment_item_user_head"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@+id/iv_comment_item_user_head"
            android:layout_alignBottom="@+id/iv_comment_item_user_head"
            android:layout_toRightOf="@+id/iv_comment_item_user_head"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            >
            <TextView 
	            android:id="@+id/tv_comment_item_user_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/normal_text_size"
	            android:textColor="@color/text_black_mid"
	            />
            <TextView 
	            android:id="@+id/tv_comment_item_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/sub_text_size"
	            android:textColor="@color/text_black_off"
	            />
        </LinearLayout>
        <TextView 
            android:id="@+id/tv_comment_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_comment_item_user_head"
            android:layout_below="@+id/iv_comment_item_user_head"
            android:layout_marginLeft="12dp"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_black_on"
            />
    </RelativeLayout>

</LinearLayout>