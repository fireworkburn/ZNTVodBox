<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/center_bg">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >
        <TextView 
	        android:id="@+id/tv_get_coin_left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/normal_text_size"
	        android:textColor="@color/text_black_on"
	        />
	    <TextView 
	        android:id="@+id/tv_get_coin_hint"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/small_text_size"
	        android:textColor="@color/text_black_mid"
	        android:layout_marginTop="6dp"
	        android:text="冻结的金币将在一定时间后自动返还"
	        />
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="2dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        
        >
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:textColor="@color/text_black_on"
             android:textSize="@dimen/normal_text_size"
             android:text="公测阶段，金币免费获取"
             android:padding="12dp"
             />
        
        <View 
	         android:layout_width="fill_parent"
	         android:layout_height="1dp"
	         android:background="@color/text_blue_off"
	         />
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <View 
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_blue_off"
                />
            <TextView 
                android:id="@+id/tv_coin_recharge_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="100"
                android:background="@drawable/sel_item_bg"
                android:gravity="center"
                android:textColor="@color/text_blue_on"
                android:textSize="@dimen/title_text_size"
                android:padding="12dp"
                android:clickable="true"
                />
            <View 
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_blue_off"
                />
            <TextView 
                android:id="@+id/tv_coin_recharge_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="200"
                android:background="@drawable/sel_item_bg"
                android:gravity="center"
                android:textColor="@color/text_blue_on"
                android:textSize="@dimen/title_text_size"
                android:padding="12dp"
                android:clickable="true"
                />
            <View 
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_blue_off"
                />
            <TextView 
                android:id="@+id/tv_coin_recharge_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="300"
                android:background="@drawable/sel_item_bg"
                android:gravity="center"
                android:textColor="@color/text_blue_on"
                android:textSize="@dimen/title_text_size"
                android:padding="12dp"
                android:clickable="true"
                />
            <View 
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_blue_off"
                />
        </LinearLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/text_blue_off"
            />
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <View 
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_blue_off"
                />
            <TextView 
                android:id="@+id/tv_coin_recharge_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="500"
                android:background="@drawable/sel_item_bg"
                android:gravity="center"
                android:textColor="@color/text_blue_on"
                android:textSize="@dimen/title_text_size"
                android:padding="12dp"
                android:clickable="true"
                />
            <View 
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_blue_off"
                />
            <TextView 
                android:id="@+id/tv_coin_recharge_five"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="1000"
                android:background="@drawable/sel_item_bg"
                android:gravity="center"
                android:textColor="@color/text_blue_on"
                android:textSize="@dimen/title_text_size"
                android:padding="12dp"
                android:clickable="true"
                />
            <View 
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_blue_off"
                />
            <TextView 
                android:id="@+id/tv_coin_recharge_six"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="2000"
                android:background="@drawable/sel_item_bg"
                android:gravity="center"
                android:textColor="@color/text_blue_on"
                android:textSize="@dimen/title_text_size"
                android:padding="12dp"
                android:clickable="true"
                />
            <View 
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/text_blue_off"
                />
        </LinearLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/text_blue_off"
            />
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:textColor="@color/text_black_on"
             android:textSize="@dimen/normal_text_size"
             android:text="100金币/1元"
             android:visibility="invisible"
             android:padding="12dp"
             />
    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar"
        android:layout_marginTop="6dp"
        />
    
    <TextView 
        android:id="@+id/tv_coin_recharge_confirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        style="@style/ButtonRed"
        android:textSize="@dimen/title_text_size"
        android:text="充值"
        />

</LinearLayout>