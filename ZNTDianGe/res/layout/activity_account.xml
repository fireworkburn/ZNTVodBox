<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/center_bg" >
    
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
		
            <com.znt.diange.view.CircleImageView
			      android:id="@+id/civ_account_head"
			      android:layout_width="86dp"
			      android:layout_height="86dp"
			      android:layout_marginTop="12dp"
			      android:layout_gravity="center_horizontal"
			      android:src="@drawable/logo"
			      android:clickable="true"
			      ></com.znt.diange.view.CircleImageView>
            
		    <RelativeLayout 
		        android:id="@+id/view_account_content"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_marginLeft="12dp"
		        android:layout_marginRight="12dp"
		        android:layout_marginTop="12dp"
		        android:paddingLeft="12dp"
		        android:paddingRight="12dp"
		        android:paddingBottom="10dp"
		        android:paddingTop="1dp"
		        android:background="@drawable/style_view_bg_frame"
		        >
		        <LinearLayout 
			        android:id="@+id/view_account_unlogin"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:orientation="vertical"
			        android:background="@color/white"
			        >
			        <com.znt.diange.view.ClearEditText 
			            android:id="@+id/cet_account_unlogin_account"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="25dp"
			            android:paddingTop="12dp"
			            android:paddingBottom="12dp"
			            android:paddingLeft="5dp"
			            android:paddingRight="5dp"
			            android:textSize="@dimen/normal_text_size"
			            android:textColor="@color/text_black_on"
			            android:background="@drawable/sel_edittext_bg"
			            android:drawableLeft="@drawable/icon_account_user"
			            android:hint="输入手机号码"
			            android:inputType="phone"
			            />
			        <com.znt.diange.view.ClearEditText 
			            android:id="@+id/cet_account_unlogin_pwd"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="12dp"
			            android:paddingTop="12dp"
			            android:paddingBottom="12dp"
			            android:paddingLeft="5dp"
			            android:paddingRight="5dp"
			            android:textSize="@dimen/normal_text_size"
			            android:textColor="@color/text_black_on"
			            android:background="@drawable/sel_edittext_bg"
			            android:drawableLeft="@drawable/icon_account_pwd"
			            android:hint="输入登陆密码"
			            android:inputType="textPassword"
	            		android:imeOptions="actionGo"
			            />
			        
			        <TextView 
			            android:id="@+id/tv_account_login"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="16dp"
			            style="@style/ButtonRed"
			            android:text="登陆"
			            />
			        <RelativeLayout 
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="6dp"
			            >
			            <TextView 
				          android:id="@+id/tv_account_forget_pwd"
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          android:layout_alignParentRight="true"
				          android:paddingLeft="25dp"
				          android:paddingRight="25dp"
				          android:paddingTop="10dp"
				          android:paddingBottom="10dp"
				          android:background="@drawable/sel_item_bg"
				          android:textColor="@color/text_black_on"
				          android:text="忘记密码?"
				          />
		        		<TextView 
			              android:id="@+id/tv_account_register"
			              android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          android:layout_alignParentLeft="true"
				          android:paddingLeft="25dp"
				          android:paddingRight="25dp"
				          android:paddingTop="10dp"
				          android:paddingBottom="10dp"
				          android:background="@drawable/sel_item_bg"
				          android:textColor="@color/text_black_on"
			              android:text="新用户注册"
			              />
			        </RelativeLayout>
			        
			    </LinearLayout>
			    
			    <LinearLayout 
			        android:id="@+id/view_account_login"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:padding="12dp"
			        android:paddingBottom="16dp"
			        android:orientation="vertical"
			        android:visibility="gone">
			        
			        <com.znt.diange.view.ItemTextView 
			            android:id="@+id/itv_account_login_name"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            ></com.znt.diange.view.ItemTextView>
			        <View 
			            android:layout_width="fill_parent"
			            android:layout_height="1dp"
			            android:background="@color/spacebar_0"
			            />
			        <com.znt.diange.view.ItemTextView 
			            android:id="@+id/itv_account_login_user"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            ></com.znt.diange.view.ItemTextView>
			        <View 
			            android:layout_width="fill_parent"
			            android:layout_height="1dp"
			            android:background="@color/spacebar_0"
			            />
			        <com.znt.diange.view.ItemTextView 
			            android:id="@+id/itv_account_login_pwd"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            ></com.znt.diange.view.ItemTextView>
			        <View 
			            android:layout_width="fill_parent"
			            android:layout_height="1dp"
			            android:background="@color/spacebar_0"
			            />
			        <TextView 
			            android:id="@+id/tv_account_loginout"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="12dp"
			            android:layout_gravity="center_horizontal"
			            style="@style/ButtonRed"
			            android:text="注销"
			            />
			    </LinearLayout>
			    
			    
		    </RelativeLayout>
		    <LinearLayout
		        android:id="@+id/view_account_third_login" 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_gravity="center_horizontal"
		        android:gravity="center_horizontal"
		        android:layout_marginTop="6dp"
		        >
		        
		        <LinearLayout 
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal"
			        android:layout_gravity="center_horizontal"
			        android:gravity="center_horizontal"
		            >
		            <ImageView 
			            android:id="@+id/iv_login_sina"
			            android:layout_width="@dimen/logo_size"
			            android:layout_height="@dimen/logo_size"
			            android:layout_marginRight="6dp"
			            android:padding="12dp"
			            android:src="@drawable/logo_sina_weibo"
			            android:background="@drawable/sel_btn_translucent"
			            android:clickable="true"
			            /> 
			        <ImageView 
			            android:id="@+id/iv_login_qq"
			            android:layout_width="@dimen/logo_size"
			            android:layout_height="@dimen/logo_size"
			            android:layout_marginRight="6dp"
			            android:layout_marginLeft="6dp"
			            android:padding="12dp"
			            android:src="@drawable/logo_qq"
			            android:background="@drawable/sel_btn_translucent"
			            android:clickable="true"
			            />
			        <ImageView 
			            android:id="@+id/iv_login_weixin"
			            android:layout_width="@dimen/logo_size"
			            android:layout_height="@dimen/logo_size"
			            android:layout_marginLeft="6dp"
			            android:padding="12dp"
			            android:src="@drawable/logo_weixin"
			            android:background="@drawable/sel_btn_translucent"
			            android:clickable="true"
			            android:visibility="gone"
			            />
		        </LinearLayout>
		        
		        <TextView 
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:layout_gravity="center_horizontal"
			       android:textSize="@dimen/normal_text_size"
			       android:textColor="@color/text_black_on"
			       android:text="免注册一键登陆"
			       />
		        <View 
		            android:layout_width="fill_parent"
		            android:layout_height="1dp"
		            android:background="@color/spacebar_0"
		            android:layout_marginLeft="32dp"
		            android:layout_marginRight="32dp"
		            android:layout_marginTop="6dp"
		            />
		    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
</RelativeLayout>