<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sel_item_bg"
        >
        
        <ImageView 
            android:id="@+id/iv_play_list_item_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="6dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_music"
            />
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_play_list_item_icon"
            android:layout_toLeftOf="@+id/view_play_list_item_delete"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingTop="8dp"
        	android:paddingBottom="8dp"
            >
            <TextView 
	            android:id="@+id/tv_play_list_item_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/normal_text_size"
	            android:textColor="@color/text_black_on"
	            android:singleLine="true"
	            />
	        <TextView 
	            android:id="@+id/tv_play_list_item_artist"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:textSize="@dimen/sub_text_size"
	            android:textColor="@color/text_black_off"
	            android:singleLine="true"
	            />
        </LinearLayout>
        
        <RelativeLayout 
            android:id="@+id/view_play_list_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:padding="12dp"
            android:clickable="true"
            android:layout_centerVertical="true"
            >
            <ImageView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/icon_close_1"
                  android:layout_centerVertical="true"
                  />
        </RelativeLayout>
        
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar"
        />

    
</LinearLayout>