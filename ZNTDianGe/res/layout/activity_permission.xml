<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.znt.diange"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="30dp" 
    android:paddingRight="30dp" 
    android:paddingTop="30dp" 
    >
    
    <com.znt.diange.view.SwitchButton
     	style="@style/SwitchButton"
        android:id="@+id/switch_play_speaker_music"
        android:checked="true"
        app:withTextInterval="12dp"
        app:frameDrawable="@drawable/switch_frame"
        app:stateDrawable="@drawable/selector_switch_state"
        app:stateMaskDrawable="@drawable/switch_state_mask"
        app:sliderDrawable="@drawable/selector_switch_slider"
        android:layout_width="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/text_black_on"
        android:textSize="@dimen/normal_text_size"
        />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        >
        
        <TextView 
            android:id="@+id/btn_device_permission_confirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="确定修改"
            android:textColor="@color/text_blue_on"
            style="@style/ButtonTranslucent_2"
            />
        
    </LinearLayout>

</RelativeLayout>