<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res/com.znt.diange" >
    
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            
            <RelativeLayout 
		        android:id="@+id/view_personal_account"
		        android:layout_width="fill_parent"
		        android:layout_height="@dimen/user_account_height"
		        android:orientation="horizontal"
		        android:paddingLeft="12dp"
		        android:paddingRight="5dp"
		        android:clickable="true"
		        android:background="@color/white"
		        >
		        <com.znt.diange.view.CircleImageView 
		            android:id="@+id/civ_personal_head"
		            android:layout_width="@dimen/user_height_size"
		            android:layout_height="@dimen/user_height_size"
		            android:layout_centerVertical="true"
		            android:layout_alignParentLeft="true"
		            android:src="@drawable/logo"
		            />
		        
		        <TextView 
		            android:id="@+id/tv_personal_login"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_toRightOf="@+id/civ_personal_head"
		          	android:paddingLeft="12dp"
		          	android:paddingRight="30dp"
		          	android:singleLine="true"
		          	android:ellipsize="end"
		          	android:textColor="@color/text_blue_on"
		          	android:textSize="@dimen/title_text_size"
		          	android:text="请登录"
		            />
		        <ImageView 
		            android:contentDescription="@string/desc"
		            android:layout_width="32dp"
		            android:layout_height="32dp"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="5dp"
		            android:src="@drawable/icon_item_more"
		            />
		    </RelativeLayout>
            
            <View 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/spacebar_0"
                />
            
            <LinearLayout 
		       android:id="@+id/view_set_user"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:orientation="vertical"
		       >
		       <TextView 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="@color/spacebar"
			        android:textSize="@dimen/small_text_size"
			        android:textColor="@color/text_black_mid"
			        android:paddingLeft="16dp"
			        android:paddingTop="4dp"
			        android:paddingBottom="4dp"
			        android:text="用户信息"
			        android:visibility="gone"
			        />
		       <com.znt.diange.view.ItemTextView
			        android:id="@+id/itv_set_jinbi"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			        ></com.znt.diange.view.ItemTextView>
			    <com.znt.diange.view.ItemTextView
			        android:id="@+id/itv_set_add_admin"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:visibility="gone"
			        ></com.znt.diange.view.ItemTextView>
			    <com.znt.diange.view.ItemTextView
			        android:id="@+id/itv_set_select_device"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			        ></com.znt.diange.view.ItemTextView>
			    <com.znt.diange.view.ItemTextView
			        android:id="@+id/itv_set_my_speaker"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			        ></com.znt.diange.view.ItemTextView>
		   </LinearLayout>
		   
		   <LinearLayout 
		       android:id="@+id/view_set_admin"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:orientation="vertical"
		       >
		    <TextView 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/spacebar"
		        android:textSize="@dimen/small_text_size"
		        android:textColor="@color/text_black_mid"
		        android:paddingLeft="16dp"
		        android:paddingTop="4dp"
		        android:paddingBottom="4dp"
		        android:text="管理员"
		        />
		       <com.znt.diange.view.ItemTextView
			        android:id="@+id/itv_set_speaker_song_book"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:visibility="gone"
			        ></com.znt.diange.view.ItemTextView>
		       <com.znt.diange.view.ItemTextView
			        android:id="@+id/itv_set_speaker_play_res"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:visibility="gone"
			        ></com.znt.diange.view.ItemTextView>
		       <com.znt.diange.view.ItemTextView
			        android:id="@+id/itv_set_speaker_manager"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			        ></com.znt.diange.view.ItemTextView>
			    <com.znt.diange.view.ItemTextView
			        android:id="@+id/itv_set_speaker_controll"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			        ></com.znt.diange.view.ItemTextView>
			    <com.znt.diange.view.ItemTextView
			        android:id="@+id/itv_set_speaker_permission"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			        ></com.znt.diange.view.ItemTextView>
			    
			    <View 
			        android:layout_width="fill_parent"
			        android:layout_height="2dp"
			        android:background="@color/spacebar"
			        />
		   </LinearLayout>
		   
		   <LinearLayout 
		       android:id="@+id/view_set_system"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:orientation="vertical"
		       >
		    <TextView 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/spacebar"
		        android:textSize="@dimen/small_text_size"
		        android:textColor="@color/text_black_mid"
		        android:paddingLeft="16dp"
		        android:paddingTop="4dp"
		        android:paddingBottom="4dp"
		        android:text="系统设置"
		        />
		       <RelativeLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        >
		        <com.znt.diange.view.ItemTextView
			        android:id="@+id/itv_set_update"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			        ></com.znt.diange.view.ItemTextView>
		        <TextView 
		            android:id="@+id/tv_set_update_dot"
		            android:layout_width="10dp"
		            android:layout_height="10dp"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="28dp"
		            android:background="@drawable/style_round_bg_red"
		            android:visibility="gone"
		            />
		    </RelativeLayout>
		    
		    <com.znt.diange.view.ItemTextView
		        android:id="@+id/itv_set_feed_back"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		        ></com.znt.diange.view.ItemTextView>
		    <com.znt.diange.view.ItemTextView
		        android:id="@+id/itv_set_mark"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		        ></com.znt.diange.view.ItemTextView>
		    <com.znt.diange.view.ItemTextView
		        android:id="@+id/itv_set_help"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		        ></com.znt.diange.view.ItemTextView>
		    <com.znt.diange.view.ItemTextView
		        android:id="@+id/itv_set_about"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		        ></com.znt.diange.view.ItemTextView>
		   </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>