<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sel_item_bg"
        android:padding="12dp"
        >
        
        <ImageView 
            android:id="@+id/iv_comment_header_cover"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            />
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_comment_header_more"
            android:orientation="vertical"
            android:layout_alignTop="@+id/iv_comment_header_cover"
            android:layout_alignBottom="@+id/iv_comment_header_cover"
            android:layout_toRightOf="@+id/iv_comment_header_cover"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            >
            <TextView 
	            android:id="@+id/tv_comment_header_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/normal_text_size"
	            android:textColor="@color/text_black_on"
	            />
            <TextView 
	            android:id="@+id/tv_comment_header_artist"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/sub_text_size"
	            android:textColor="@color/text_black_mid"
	            />
        </LinearLayout>
        
        <ImageView 
            android:id="@+id/iv_comment_header_more"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/icon_item_more"
            />
        
    </RelativeLayout>
	
    <TextView 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:textSize="@dimen/normal_text_size"
          android:textColor="@color/text_black_mid"
          android:background="@color/spacebar_0"
          android:padding="4dp"
          android:text="最新评论"
          />
    
</LinearLayout>