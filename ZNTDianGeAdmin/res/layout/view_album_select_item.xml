<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sel_item_bg"
    android:clickable="true"
     >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_album_select_item_bg"
        >
        
        <ImageView 
            android:id="@+id/iv_album_select_cover"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            />
        
        <TextView 
            android:id="@+id/tv_album_sellect_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_album_select_cover"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_black_on"
            /> 
        
        <RelativeLayout 
           	android:id="@+id/view_album_select_item_operation"
           	android:layout_width="62dp"
        	android:layout_height="fill_parent"
        	android:layout_alignTop="@+id/iv_album_select_cover"
        	android:layout_alignBottom="@+id/iv_album_select_cover"
        	android:layout_alignParentRight="true"
           	android:orientation="horizontal"
	       	android:paddingTop="6dp"
	       	android:paddingBottom="6dp"
	       	android:clickable="false"
	        >
           <ImageView 
               android:id="@+id/iv_album_select_item_operation"
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:src="@drawable/icon_selected_off"
               android:layout_centerInParent="true"
               />
       </RelativeLayout>
        
    </RelativeLayout>

</LinearLayout>