<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/center_bg" >
    
    <LinearLayout 
        android:id="@+id/view_main_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/view_main_bottom"
        ></LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar_0"
        android:layout_above="@+id/view_main_bottom"
        />
    <LinearLayout 
        android:id="@+id/view_main_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:background="@color/bottom_bg"
        >
        
        <LinearLayout 
	        android:id="@+id/view_main_bottom_shop"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1.0"
	    	android:orientation="vertical"
	    	android:clickable="true"
	    	android:layout_gravity="center_vertical"
	        >
	        <ImageView 
	            android:id="@+id/iv_main_bottom_shop"
	            android:contentDescription="@string/desc"
	            android:layout_width="@dimen/indicator_icon_size"
			    android:layout_height="@dimen/indicator_icon_size"
			    android:layout_gravity="center_horizontal"
			    android:gravity="center_horizontal"
			    android:src="@drawable/sel_indicator_shop"
			    android:focusable="true"
	            />
	        <TextView 
	            android:id="@+id/tv_main_bottom_shop"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:gravity="center_horizontal"
			    android:text="店铺"
			    android:textSize="@dimen/small_text_size"
			    android:textColor="@color/text_black_mid"
		        />
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/view_main_bottom_my_music"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1.0"
	    	android:orientation="vertical"
	    	android:clickable="true"
	    	android:layout_gravity="center_vertical"
	        >
	        <ImageView 
	            android:id="@+id/iv_main_bottom_my_music"
	            android:contentDescription="@string/desc"
	            android:layout_width="@dimen/indicator_icon_size"
			    android:layout_height="@dimen/indicator_icon_size"
			    android:layout_gravity="center_horizontal"
			    android:gravity="center_horizontal"
			    android:src="@drawable/sel_indicator_music"
			    android:focusable="true"
	            />
	        <TextView 
	            android:id="@+id/tv_main_bottom_my_music"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:gravity="center_horizontal"
			    android:text="我的歌单"
			    android:textSize="@dimen/small_text_size"
			    android:textColor="@color/text_black_mid"
		        />
	    </LinearLayout>
        <LinearLayout 
	        android:id="@+id/view_main_bottom_dianbo"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1.0"
	    	android:orientation="vertical"
	    	android:clickable="true"
	    	android:layout_gravity="center_vertical"
	        >
	        <ImageView 
	            android:id="@+id/iv_main_bottom_dianbo"
	            android:contentDescription="@string/desc"
	            android:layout_width="@dimen/indicator_icon_size"
			    android:layout_height="@dimen/indicator_icon_size"
			    android:layout_gravity="center_horizontal"
			    android:gravity="center_horizontal"
			    android:src="@drawable/sel_indicator_discover"
			    android:focusable="true"
	            />
	        <TextView 
	            android:id="@+id/tv_main_bottom_dianbo"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:gravity="center_horizontal"
			    android:text="发现音乐"
			    android:textSize="@dimen/small_text_size"
			    android:textColor="@color/text_black_mid"
		        />
	    </LinearLayout>
        
        <LinearLayout 
	        android:id="@+id/view_main_bottom_personal"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1.0"
	    	android:orientation="vertical"
	    	android:clickable="true"
	    	android:layout_gravity="center_vertical"
	        >
	        <ImageView 
	            android:id="@+id/iv_main_bottom_personal"
	            android:contentDescription="@string/desc"
	            android:layout_width="@dimen/indicator_icon_size"
			    android:layout_height="@dimen/indicator_icon_size"
			    android:layout_gravity="center_horizontal"
			    android:gravity="center_horizontal"
			    android:src="@drawable/sel_indicator_personal"
			    android:focusable="true"
	            />
	        <TextView 
	            android:id="@+id/tv_main_bottom_personal"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:gravity="center_horizontal"
			    android:text="设置"
			    android:textSize="@dimen/small_text_size"
			    android:textColor="@color/text_black_mid"
		        />
	    </LinearLayout>
        
    </LinearLayout>
    
</RelativeLayout>