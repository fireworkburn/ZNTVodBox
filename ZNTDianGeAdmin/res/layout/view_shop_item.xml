<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <RelativeLayout 
        android:id="@+id/view_device_item_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants"
        >
            
        <ImageView
            android:id="@+id/iv_shop_item_cover" 
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_default_shop_bg"
            />
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/iv_shop_item_cover"
            android:layout_toLeftOf="@+id/tv_shop_item_count"
            android:layout_marginLeft="6dp"
            >
            <TextView 
		        android:id="@+id/tv_shop_item_name"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/title_text_size"
		        android:textColor="@color/text_black_on"
		        android:singleLine="true"
		        android:ellipsize="end"
		        />
	        <TextView 
		        android:id="@+id/tv_shop_item_play_song"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:textSize="@dimen/small_text_size"
		        android:textColor="@color/text_black_on"
		        />
	        <TextView 
		        android:id="@+id/tv_shop_item_play_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:textSize="@dimen/sub_text_size"
		        android:textColor="@color/text_black_on"
		        />
	        <TextView 
		        android:id="@+id/tv_shop_item_addr"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="2dp"
		        android:textSize="@dimen/sub_text_size"
		        android:textColor="@color/text_black_mid"
		        android:singleLine="true"
		        android:ellipsize="end"
		        />
        </LinearLayout>
        
        <TextView
            android:id="@+id/tv_shop_item_count" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_shop_item_cover"
            />
            
    </RelativeLayout>
</LinearLayout>