<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/view_song_item_bg" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="6dp"
	        android:paddingRight="10dp"
	        android:paddingTop="8dp"
	        >
	        
            <ImageView 
	            android:id="@+id/iv_song_icon"
	            android:layout_width="42dp"
	            android:layout_height="42dp"
	            android:padding="6dp"
	            android:layout_centerVertical="true"
	            android:src="@drawable/icon_music"
	            />
            
	        <TextView 
	            android:id="@+id/tv_song_item_number"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:textSize="@dimen/normal_text_size"
	            android:textStyle="bold"
	            android:clickable="false"
	            android:focusable="false"
	            android:textColor="@color/text_black_on"
	            android:visibility="gone"
	            />
	        
	        <TextView 
	            android:id="@+id/tv_song_item_music_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/normal_text_size"
	            android:textColor="@color/text_black_on"
	            android:layout_toRightOf="@+id/iv_song_icon"
	            android:layout_toLeftOf="@+id/view_song_item_right"
	            android:singleLine="true"
	            android:ellipsize="end"
	            android:clickable="false"
	            android:focusable="false"
	            />
	        
	        <TextView 
	            android:id="@+id/tv_song_item_music_artist"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:textSize="@dimen/sub_text_size"
	            android:textColor="@color/text_black_off"
	            android:layout_toRightOf="@+id/iv_song_icon"
	            android:layout_below="@+id/tv_song_item_music_name"
	            android:layout_toLeftOf="@+id/view_song_item_right"
	            android:clickable="false"
	            android:focusable="false"
	            />
	        
	        <RelativeLayout 
	            android:id="@+id/view_song_item_right"
	            android:layout_width="128dp"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:paddingBottom="8dp"
	            >
	            <LinearLayout
	                android:id="@+id/view_song_item_coin" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_alignParentTop="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="5dp"
	                >
	                <ImageView 
	                    android:layout_width="18dp"
	                    android:layout_height="18dp"
	                    android:layout_marginRight="4dp"
	                    android:layout_gravity="center_vertical"
	                    android:src="@drawable/icon_jinbi"
	                    />
	                <TextView 
			            android:id="@+id/tv_song_item_coin"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_vertical"
			            android:textSize="@dimen/normal_text_size"
			            android:textColor="@color/text_blue_off"
			            />
	            </LinearLayout>
	            <TextView 
		            android:id="@+id/tv_song_item_user"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_below="@+id/view_song_item_coin"
		            android:layout_marginTop="12dp"
		            android:textSize="@dimen/sub_text_size"
		            android:textColor="@color/text_black_mid"
		            android:layout_alignParentBottom="true"
		            android:singleLine="true"
		            android:ellipsize="end"
		            />
	        </RelativeLayout>
	        
	        <ImageView 
	            android:id="@+id/iv_song_item_more_icon"
	            android:layout_width="22dp"
	            android:layout_height="22dp"
	            android:layout_centerHorizontal="true"
	            android:layout_alignParentBottom="true"
	            android:src="@drawable/icon_pull_down"
	            />
	        
	    </RelativeLayout>
        
        <LinearLayout 
            android:id="@+id/view_song_item_more_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
	        <RelativeLayout 
	            android:id="@+id/view_song_item_more_detail"
	            android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/sel_item_bg"
                android:clickable="true"
                android:padding="4dp"
	            >
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_centerInParent="true"
	                >
	                <ImageView 
		                android:layout_width="22dp"
		                android:layout_height="22dp"
		                android:layout_gravity="center_vertical"
		                android:src="@drawable/icon_song_item_detail"
		                />
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="2dp"
		                android:layout_gravity="center_vertical"
		                android:textSize="@dimen/small_text_size"
		                android:textColor="@color/text_blue_on"
		                android:gravity="center_horizontal"
		                android:text="详情"
		                />
	            </LinearLayout>
	            
	        </RelativeLayout>
	        
	        <RelativeLayout 
	            android:id="@+id/view_song_item_more_delete"
	            android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/sel_item_bg"
                android:clickable="true"
                android:padding="6dp"
	            >
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_centerInParent="true"
	                >
	                <ImageView 
		                android:layout_width="22dp"
		                android:layout_height="22dp"
		                android:layout_gravity="center_vertical"
		                android:src="@drawable/icon_song_item_delete"
		                />
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="2dp"
		                android:layout_gravity="center_vertical"
		                android:textSize="@dimen/small_text_size"
		                android:textColor="@color/text_blue_on"
		                android:gravity="center_horizontal"
		                android:text="删除"
		                />
	            </LinearLayout>
	            
	        </RelativeLayout>
	        <RelativeLayout 
	            android:id="@+id/view_song_item_more_msg"
	            android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/sel_item_bg"
                android:clickable="true"
                android:padding="6dp"
	            >
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_centerInParent="true"
	                >
	                <ImageView 
		                android:layout_width="22dp"
		                android:layout_height="22dp"
		                android:layout_gravity="center_vertical"
		                android:src="@drawable/icon_song_item_msg"
		                />
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="2dp"
		                android:layout_gravity="center_vertical"
		                android:textSize="@dimen/small_text_size"
		                android:textColor="@color/text_blue_on"
		                android:gravity="center_horizontal"
		                android:text="留言"
		                />
	            </LinearLayout>
	            
	        </RelativeLayout>
	        <RelativeLayout 
	            android:id="@+id/view_song_item_more_chabo"
	            android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/sel_item_bg"
                android:clickable="true"
                android:padding="6dp"
	            >
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_centerInParent="true"
	                >
	                <ImageView 
		                android:layout_width="22dp"
		                android:layout_height="22dp"
		                android:layout_gravity="center_vertical"
		                android:src="@drawable/icon_song_item_chabo"
		                />
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginLeft="2dp"
		                android:layout_gravity="center_vertical"
		                android:textSize="@dimen/small_text_size"
		                android:textColor="@color/text_blue_on"
		                android:gravity="center_horizontal"
		                android:text="插播"
		                />
	            </LinearLayout>
	            
	        </RelativeLayout>
            
        </LinearLayout>
        
    </LinearLayout>

    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar"
        />
    
</LinearLayout>