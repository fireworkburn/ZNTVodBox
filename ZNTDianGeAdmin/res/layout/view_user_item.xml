<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        >
        <ImageView 
            android:id="@+id/iv_user_item_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_shop_arean"
            />
        <TextView 
	        android:id="@+id/tv_user_item_name"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/iv_user_item_icon"
	        android:textSize="@dimen/LargeTextSize"
	        android:textColor="@color/text_black_on"
	        android:layout_marginLeft="5dp"
	        />
        <TextView 
	        android:id="@+id/tv_user_item_account"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="4dp"
	        android:layout_below="@+id/tv_user_item_name"
	        android:layout_toRightOf="@+id/iv_user_item_icon"
	        android:textSize="@dimen/normal_text_size"
	        android:textColor="@color/text_black_mid"
	        android:layout_marginLeft="5dp"
	        android:text="账户:18520827838"
	        />
    </RelativeLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar_0"
        />

</LinearLayout>