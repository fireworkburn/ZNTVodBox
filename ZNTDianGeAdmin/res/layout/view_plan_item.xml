<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="8dp"
        android:id="@+id/view_plan_item_bg"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/view_plan_item_delete"
            android:layout_alignParentLeft="true"
            android:paddingTop="8dp"
	        android:paddingBottom="6dp"
	        android:paddingLeft="6dp"
	        android:paddingRight="6dp"
	        android:orientation="vertical"
            >
            <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            >
	            <ImageView 
		            android:id="@+id/iv_plan_item"
		            android:layout_width="22dp"
		            android:layout_height="22dp"
		            android:layout_gravity="clip_vertical"
		            android:background="@drawable/icon_plan_item"
		            android:scaleType="centerCrop"
		            />
		        
		        <TextView 
		            android:id="@+id/tv_plan_item_time"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="clip_vertical"
		            android:paddingLeft="6dp"
		            android:textSize="@dimen/title_text_size"
		            android:textColor="@color/text_blue_on"
		            />
	        </LinearLayout>
	        
	        <TextView 
	            android:id="@+id/tv_plan_item_album"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingBottom="8dp"
	            android:paddingLeft="32dp"
	            android:paddingRight="22dp"
	            android:textSize="@dimen/normal_text_size"
	            android:textColor="@color/text_black_mid"
	            />
        </LinearLayout>
        
        <RelativeLayout 
            android:layout_width="38dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:padding="6dp"
            android:id="@+id/view_plan_item_delete"
            android:background="@drawable/sel_item_bg"
            >
            <ImageView 
	            android:id="@+id/iv_plan_item_delete"
	            android:layout_width="26dp"
	            android:layout_height="26dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerInParent="true"
	            android:src="@drawable/icon_song_item_delete"
	            />
        </RelativeLayout>
        
        
    </RelativeLayout>

</LinearLayout>