<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.znt.vodbox.view.listview.LJListView
        android:id="@+id/ptrl_song_book"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1dp"
        android:layout_above="@+id/view_song_book_bottom"
        ></com.znt.vodbox.view.listview.LJListView>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar_0"
        android:layout_above="@+id/view_song_book_bottom"
        />
    
    <RelativeLayout 
        android:id="@+id/view_song_book_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sel_item_bg"
        >
        
        <LinearLayout 
            android:id="@+id/view_song_book_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/sel_item_bg"
            android:clickable="true"
            android:orientation="horizontal"
            >
            <ImageView 
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_set_update"
                />
            <TextView 
	            android:id="@+id/tv_song_book_update"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_blue_on"
	            android:textSize="@dimen/normal_text_size"
	            android:text="更新音响曲库"
	            />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/view_song_book_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/sel_item_bg"
            android:clickable="true"
            android:orientation="horizontal"
            >
            <ImageView 
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_set_ad_device"
                />
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_blue_on"
	            android:textSize="@dimen/normal_text_size"
	            android:text="添加歌曲"
	            />
        </LinearLayout>
        
    </RelativeLayout>
    
</RelativeLayout>