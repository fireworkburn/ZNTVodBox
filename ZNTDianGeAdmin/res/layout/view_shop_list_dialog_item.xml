<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        
        
        <TextView 
            android:id="@+id/tv_shop_list_dialog_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_shop_list_dialog_item"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_black_on"
            />
        <TextView 
            android:id="@+id/tv_shop_list_dialog_item_addr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_shop_list_dialog_item"
            android:layout_below="@+id/tv_shop_list_dialog_item_name"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/sub_text_size"
            android:textColor="@color/text_black_mid"
            />
        
        <ImageView 
            android:id="@+id/iv_shop_list_dialog_item"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sel_item_select"
            />
        
    </RelativeLayout>

</LinearLayout>