<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="false"
    android:background="@color/center_bg" >
    
      <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical"
          >

          <com.znt.vodbox.view.CircleImageView
		      android:id="@+id/civ_account_head"
		      android:layout_width="86dp"
		      android:layout_height="86dp"
		      android:layout_marginTop="32dp"
		      android:layout_gravity="center_horizontal"
		      android:src="@drawable/logo"
		      android:clickable="true"
		      android:scaleType="centerCrop"
		      android:visibility="gone"
		      ></com.znt.vodbox.view.CircleImageView>
          
          <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="12dp"
	    	  android:layout_gravity="center_horizontal"
              android:textSize="@dimen/TitleTextSize"
              android:textColor="@color/main_bg"
              android:textStyle="bold"
              android:visibility="gone"
              />
          
    <RelativeLayout 
        android:id="@+id/view_account_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        >
        <LinearLayout 
	        android:id="@+id/view_account_unlogin"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="12dp"
        	android:layout_marginRight="12dp"
        	android:paddingLeft="12dp"
	        android:paddingRight="12dp"
	        android:paddingBottom="10dp"
	        android:paddingTop="1dp"
	        android:background="@drawable/style_view_bg_frame"
	        >
	        <com.znt.vodbox.view.ClearEditText 
	            android:id="@+id/cet_account_unlogin_account"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="25dp"
	            android:paddingTop="12dp"
	            android:paddingBottom="12dp"
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:textSize="@dimen/normal_text_size"
	            android:textColor="@color/text_black_on"
	            android:background="@drawable/sel_edittext_bg"
	            android:drawableLeft="@drawable/icon_account_user"
	            android:hint="输入手机号码"
	            android:inputType="phone"
	            />
	        <com.znt.vodbox.view.ClearEditText 
	            android:id="@+id/cet_account_unlogin_pwd"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="12dp"
	            android:paddingTop="12dp"
	            android:paddingBottom="12dp"
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:textSize="@dimen/normal_text_size"
	            android:textColor="@color/text_black_on"
	            android:background="@drawable/sel_edittext_bg"
	            android:drawableLeft="@drawable/icon_account_pwd"
	            android:hint="输入登陆密码"
	            android:inputType="textPassword"
           		android:imeOptions="actionGo"
	            />
	        
	        <TextView 
	            android:id="@+id/tv_account_login"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="16dp"
	            style="@style/ButtonRed"
	            android:text="登陆"
	            />
	        <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="6dp"
	            >
	            <TextView 
		          android:id="@+id/tv_account_forget_pwd"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_alignParentRight="true"
		          android:paddingLeft="25dp"
		          android:paddingRight="25dp"
		          android:paddingTop="10dp"
		          android:paddingBottom="10dp"
		          android:background="@drawable/sel_item_bg"
		          android:textColor="@color/text_black_on"
		          android:text="忘记密码?"
		          />
        		<TextView 
	              android:id="@+id/tv_account_register"
	              android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_alignParentLeft="true"
		          android:paddingLeft="25dp"
		          android:paddingRight="25dp"
		          android:paddingTop="10dp"
		          android:paddingBottom="10dp"
		          android:background="@drawable/sel_item_bg"
		          android:textColor="@color/text_black_on"
	              android:text="新用户注册"
	              />
	        </RelativeLayout>
	        
	        <View 
	            android:layout_width="fill_parent"
	            android:layout_height="1dip"
	            android:layout_marginTop="10dp"
	            android:background="@color/spacebar_1"
	            />
	        <LinearLayout 
	            android:id="@+id/view_account_more"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            >
	            <TextView 
	              android:id="@+id/tv_account_more"
	              android:layout_width="fill_parent"
		          android:layout_height="wrap_content"
		          android:layout_marginRight="10dp"
		          android:paddingTop="10dp"
		          android:paddingBottom="10dp"
		          android:background="@drawable/sel_item_bg"
		          android:textColor="@color/text_blue_on"
		          android:textSize="@dimen/title_text_size"
	              android:text="系统介绍"
	              android:gravity="center_horizontal"
	              android:layout_weight="1.0"
	              />
	            <TextView 
	              android:id="@+id/tv_account_get_box"
	              android:layout_width="fill_parent"
		          android:layout_height="wrap_content"
		          android:layout_marginLeft="10dp"
		          android:paddingTop="10dp"
		          android:paddingBottom="10dp"
		          android:background="@drawable/sel_item_bg"
		          android:textColor="@color/text_blue_on"
		          android:textSize="@dimen/title_text_size"
	              android:text="申请设备"
	              android:gravity="center_horizontal"
	              android:layout_weight="1.0"
	              />
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/view_account_login"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="12dp"
        	android:layout_marginRight="12dp"
        	android:paddingLeft="12dp"
	        android:paddingRight="12dp"
	        android:paddingBottom="22dp"
	        android:paddingTop="1dp"
	        android:background="@drawable/style_view_bg_frame"
	        android:orientation="vertical"
	       	android:clickable="true"
	        android:visibility="gone">
	        
	        <com.znt.vodbox.view.ItemTextView 
	            android:id="@+id/itv_account_login_name"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            ></com.znt.vodbox.view.ItemTextView>
	        <View 
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="@color/spacebar_0"
	            />
	        <com.znt.vodbox.view.ItemTextView 
	            android:id="@+id/itv_account_login_user"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            ></com.znt.vodbox.view.ItemTextView>
	        <View 
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="@color/spacebar_0"
	            />
	        <com.znt.vodbox.view.ItemTextView 
	            android:id="@+id/itv_account_login_pwd"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            ></com.znt.vodbox.view.ItemTextView>
	        <View 
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="@color/spacebar_0"
	            />
	        <TextView 
	            android:id="@+id/tv_account_loginout"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="12dp"
	            android:layout_gravity="center_horizontal"
	            style="@style/ButtonRed"
	            android:text="注销"
	            />
	    </LinearLayout>
	    
	    
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/view_account_third_login" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        >
        
        <LinearLayout 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_gravity="center_horizontal"
	        android:gravity="center_horizontal"
            >
            <ImageView 
	            android:id="@+id/iv_login_sina"
	            android:layout_width="@dimen/logo_size"
	            android:layout_height="@dimen/logo_size"
	            android:layout_marginRight="6dp"
	            android:padding="12dp"
	            android:src="@drawable/logo_sina_weibo"
	            android:background="@drawable/sel_btn_translucent"
	            android:clickable="true"
	            /> 
	        <ImageView 
	            android:id="@+id/iv_login_qq"
	            android:layout_width="@dimen/logo_size"
	            android:layout_height="@dimen/logo_size"
	            android:layout_marginRight="6dp"
	            android:layout_marginLeft="6dp"
	            android:padding="12dp"
	            android:src="@drawable/logo_qq"
	            android:background="@drawable/sel_btn_translucent"
	            android:clickable="true"
	            />
	        <ImageView 
	            android:id="@+id/iv_login_weixin"
	            android:layout_width="@dimen/logo_size"
	            android:layout_height="@dimen/logo_size"
	            android:layout_marginLeft="6dp"
	            android:padding="12dp"
	            android:src="@drawable/logo_weixin"
	            android:background="@drawable/sel_btn_translucent"
	            android:clickable="true"
	            android:visibility="gone"
	            />
        </LinearLayout>
        
        <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_gravity="center_horizontal"
	       android:textSize="@dimen/normal_text_size"
	       android:textColor="@color/text_black_on"
	       android:text="免注册一键登陆"
	       />
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/spacebar_0"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="6dp"
            />
    </LinearLayout>
      </LinearLayout>
</RelativeLayout>