<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/view_parent_plan_item_left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sel_item_bg"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        
        <ImageView 
            android:id="@+id/iv_parent_plan_item_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/icon_plan"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/tv_parent_plan_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/text_black_on"
            android:layout_toRightOf="@+id/iv_parent_plan_item_icon"
            android:layout_alignTop="@+id/iv_parent_plan_item_icon"
            android:layout_alignBottom="@+id/iv_parent_plan_item_icon"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            />
        <TextView 
            android:id="@+id/tv_parent_plan_item_tpye_shop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/SmallTextSize"
            android:textColor="@color/text_black_on"
            android:layout_below="@+id/tv_parent_plan_item_name"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_parent_plan_item_icon"
            android:layout_marginLeft="6dp"
            />
        <TextView 
            android:id="@+id/tv_parent_plan_item_type_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/SmallTextSize"
            android:textColor="@color/text_black_on"
            android:layout_below="@+id/tv_parent_plan_item_tpye_shop"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_parent_plan_item_icon"
            android:layout_marginLeft="6dp"
            />
        <TextView 
            android:id="@+id/tv_parent_plan_item_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/SmallTextSize"
            android:textColor="@color/text_black_mid"
            android:layout_below="@+id/tv_parent_plan_item_type_time"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv_parent_plan_item_icon"
            android:layout_marginLeft="6dp"
            />
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/view_parent_plan_item_right"
        android:layout_width="62dp"
       	android:layout_height="fill_parent"
       	android:layout_alignTop="@+id/view_parent_plan_item_left"
       	android:layout_alignBottom="@+id/view_parent_plan_item_left"
       	android:layout_alignParentRight="true"
        android:orientation="vertical"
        >
        <RelativeLayout 
            android:id="@+id/view_parent_plan_item_use"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.0"
            android:clickable="true"
       		android:background="@drawable/sel_item_bg"
            >
            <ImageView 
               android:layout_width="38dp"
               android:layout_height="38dp"
               android:src="@drawable/icon_use_plan"
               android:layout_centerInParent="true"
               />
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/view_parent_plan_item_delete"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.0"
            android:clickable="true"
       		android:background="@drawable/sel_item_bg"
            >
            <ImageView 
               android:layout_width="32dp"
               android:layout_height="32dp"
               android:src="@drawable/icon_song_item_delete"
               android:layout_centerInParent="true"
               />
        </RelativeLayout>
          
      </LinearLayout>

</RelativeLayout>