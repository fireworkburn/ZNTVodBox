<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    
    <RelativeLayout
        android:id="@+id/view_my_music_item_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@drawable/sel_item_bg"
        >
        <ImageView 
            android:id="@+id/iv_my_music_item_cover"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            />
        
        <TextView 
            android:id="@+id/tv_my_music_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/view_my_music_operation"
            android:layout_alignTop="@+id/iv_my_music_item_cover"
            android:layout_toRightOf="@+id/iv_my_music_item_cover"
            android:layout_marginLeft="4dp"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_black_on"
            />
        <TextView 
            android:id="@+id/tv_my_music_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/view_my_music_operation"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tv_my_music_item_name"
            android:layout_toRightOf="@+id/iv_my_music_item_cover"
            android:layout_marginLeft="4dp"
            android:textSize="@dimen/SmallTextSize"
            android:textColor="@color/text_black_mid"
            />
        
        <LinearLayout 
           	android:id="@+id/view_my_music_operation"
           	android:layout_width="62dp"
        	android:layout_height="fill_parent"
        	android:layout_alignTop="@+id/iv_my_music_item_cover"
        	android:layout_alignBottom="@+id/iv_my_music_item_cover"
        	android:layout_alignParentRight="true"
           	android:orientation="vertical"
	        >
	        <RelativeLayout 
	            android:id="@+id/view_my_music_edit"
	            android:layout_width="fill_parent"
	            android:layout_height="0dp"
	            android:orientation="horizontal"
	            android:layout_weight="1.0"
	            android:clickable="true"
	       		android:background="@drawable/sel_item_bg"
	            >
	            <ImageView 
	               android:layout_width="28dp"
	               android:layout_height="28dp"
	               android:src="@drawable/icon_edit"
	               android:layout_centerInParent="true"
	               />
	        </RelativeLayout>
	        <RelativeLayout 
	            android:id="@+id/view_my_music_delete"
	            android:layout_width="fill_parent"
	            android:layout_height="0dp"
	            android:orientation="horizontal"
	            android:layout_weight="1.0"
	            android:clickable="true"
	       		android:background="@drawable/sel_item_bg"
	            >
	            <ImageView 
	               android:layout_width="24dp"
	               android:layout_height="24dp"
	               android:src="@drawable/icon_delete"
	               android:layout_centerInParent="true"
	               />
	        </RelativeLayout>
           
       </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>