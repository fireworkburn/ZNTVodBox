<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <RelativeLayout 
        android:id="@+id/rlt_view_top_bg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/white"
        >
        
        <RelativeLayout 
            android:id="@+id/view_title_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="21dp"
            android:paddingRight="12dp"
            android:clickable="true"
            >
            <ImageView 
                android:id="@+id/view_title_back_icon"
		        android:layout_width="@dimen/btn_return_width"
		        android:layout_height="@dimen/btn_return_height"
		        android:layout_centerVertical="true"
		        android:src="@drawable/btn_return_off"
		        />
        </RelativeLayout>
        
        <TextView 
            android:id="@+id/tv_view_top_infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/text_black_on"
            android:textSize="@dimen/title_text_size"
            android:visibility="gone"
            android:singleLine="true"
            android:ellipsize="middle"
            android:maxLength="20"
            />
        <LinearLayout 
            android:id="@+id/view_base_top_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:background="@drawable/sel_item_bg"
	         android:layout_alignParentRight="true"
	         android:visibility="gone"
	         android:clickable="true"
	         android:paddingRight="12dp"
	         android:paddingLeft="12dp"
            >
            <ImageView 
	             android:id="@+id/iv_base_top_right"
	             android:layout_width="20dp"
	             android:layout_height="20dp"
	             android:layout_marginRight="4dp"
	             android:src="@drawable/icon_add_on"
	             android:layout_gravity="center_vertical"
	             />
	         <TextView 
		          android:id="@+id/tv_view_top_right"
		          android:layout_width="wrap_content"
		          android:layout_height="fill_parent"
		          android:layout_gravity="center_vertical"
		          android:textColor="#dc5e01"
		          android:textSize="@dimen/title_text_size"
		          android:gravity="center"
		          />
        </LinearLayout>
        
        <ProgressBar 
            android:id="@+id/pb_view_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />
        
    </RelativeLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlt_view_top_bg"
        android:background="@color/spacebar_1"
        />
	
    <LinearLayout 
	    android:id="@+id/layout_content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginTop="1dp"
	    android:layout_below="@+id/rlt_view_top_bg"
	    android:orientation="vertical"
	    >
	</LinearLayout>
    <com.znt.vodbox.view.HintView
        android:id="@+id/hintview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/rlt_view_top_bg"
	    android:visibility="gone"
	    android:layout_centerInParent="true"
        ></com.znt.vodbox.view.HintView>
    
    <LinearLayout 
        android:id="@+id/view_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="gone"
        >
        <ProgressBar 
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_black_on"
            android:textSize="@dimen/normal_text_size"
            android:text="正在加载..."
            />
    </LinearLayout>
    
</RelativeLayout>