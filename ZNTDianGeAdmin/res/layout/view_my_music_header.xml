<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <RelativeLayout 
            android:id="@+id/view_my_music_header_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/sel_item_bg_frame"
            android:clickable="true"
            >
            
            <TextView 
                android:id="@+id/tv_my_music_header_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_black_on"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="我的歌单"
                />
            
            <ImageView 
                android:id="@+id/iv_my_music_header_one"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_pull_down_off"
                />
            
        </RelativeLayout>
        
        <ListView 
            android:id="@+id/lv_my_music_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            ></ListView>
        <RelativeLayout 
            android:id="@+id/view_my_music_header_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:clickable="true"
            android:background="@drawable/sel_item_bg_frame"
            >
            
            <TextView 
                android:id="@+id/tv_my_music_header_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_black_on"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="我的收藏"
                />
            
            <ImageView 
                android:id="@+id/iv_my_music_header_two"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_pull_down_off"
                android:visibility="gone"
                />
            
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>