<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="15dip"
    android:paddingLeft="22dip"
    android:paddingRight="8dip"
    android:paddingTop="15dip" >

    <TextView
        android:id="@+id/tv_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/text_black_mid" />

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
        >
        <ImageView
	        android:id="@+id/iv_wifi_item_lock"
	        android:layout_width="32dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/icon_wifi_item_lock" />
        <ImageView
	        android:id="@+id/img_level"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/wifi_signal_4" />
        <ImageView
	        android:id="@+id/iv_wifi_item_select"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/icon_wifi_item_select" />
    </LinearLayout>

</RelativeLayout>