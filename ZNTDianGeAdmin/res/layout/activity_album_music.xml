<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.znt.vodbox.view.listview.LJListView
        android:id="@+id/ptrl_album_music"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1dp"
        android:layout_above="@+id/view_album_music_bottom"
        ></com.znt.vodbox.view.listview.LJListView>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar_0"
        android:layout_above="@+id/view_album_music_bottom"
        />
    
    <RelativeLayout 
        android:id="@+id/view_album_music_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sel_item_bg"
        >
        
        <LinearLayout 
            android:id="@+id/view_album_music_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/sel_item_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <TextView 
	            android:id="@+id/tv_song_book_update"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_blue_on"
	            android:textSize="@dimen/normal_text_size"
	            android:text="应用到店铺"
	            />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/view_album_music_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/sel_item_bg"
            android:clickable="true"
            android:orientation="horizontal"
            >
            <TextView 
	            android:id="@+id/tv_album_music_edit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_blue_on"
	            android:textSize="@dimen/normal_text_size"
	            android:text="编辑"
	            />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/view_album_music_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/sel_item_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_blue_on"
	            android:textSize="@dimen/normal_text_size"
	            android:text="添加歌曲"
	            />
        </LinearLayout>
        
    </RelativeLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar_0"
        android:layout_above="@+id/view_album_music_bottom_edit"
        />
    
    <RelativeLayout 
        android:id="@+id/view_album_music_bottom_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sel_item_bg"
        android:visibility="gone"
        >
        
        <LinearLayout 
            android:id="@+id/view_album_music_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/sel_item_bg"
            android:clickable="true"
            android:orientation="horizontal"
            >
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_blue_on"
	            android:textSize="@dimen/normal_text_size"
	            android:text="删除"
	            />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/view_album_music_add_to_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/sel_item_bg"
            android:clickable="true"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/text_blue_on"
	            android:textSize="@dimen/normal_text_size"
	            android:text="添加到店铺"
	            />
        </LinearLayout>
        
    </RelativeLayout>
    
</RelativeLayout>