<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/spacebar"
            android:padding="10dp"
            >
            <AutoCompleteTextView
		        android:id="@+id/cet_location_header"
		        android:layout_marginLeft="5dip"
		        android:layout_marginRight="5dip"
		        android:padding="8dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/sel_edittext_bg"
		        android:drawableLeft="@drawable/icon_search"
		        android:hint="请输入地点关键字"
		        android:singleLine="true"
		        android:imeOptions="actionSearch"
		        android:textSize="@dimen/normal_text_size" 
		        android:textColor="@color/text_black_mid"/>
            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignRight="@+id/cet_location_header"
                android:layout_alignTop="@+id/cet_location_header"
                android:layout_alignBottom="@+id/cet_location_header"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="搜索"
                android:gravity="center"
                android:textSize="@dimen/normal_text_size"
                style="@style/ButtonTranslucent"
                android:textColor="@color/text_blue_on"
                />
        </RelativeLayout>
        <LinearLayout 
            android:id="@+id/view_location_cur_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/sel_item_bg"
            android:layout_marginTop="8dp"
            >
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/text_black_on"
                android:background="@color/spacebar"
                android:text="当前位置"
                android:visibility="gone"
                />
            <TextView 
		        android:id="@+id/tv_location_cur_location"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:textSize="@dimen/normal_text_size"
		        android:textColor="@color/text_black_on"
		        android:drawableLeft="@drawable/ic_citylist_gps"
		        android:text="正定位所在位置..."
		        android:clickable="true"
		        android:background="@drawable/sel_item_bg"
		        />
        </LinearLayout>
        
	    <TextView 
	        android:id="@+id/tv_location_second_tag"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="10dp"
	        android:paddingTop="4dp"
            android:paddingBottom="4dp"
	        android:textSize="@dimen/normal_text_size"
	        android:textColor="@color/text_black_mid"
	        android:text="我的周边"
	        android:background="@color/spacebar"
	        android:singleLine="true"
	        />
      </LinearLayout>

</LinearLayout>