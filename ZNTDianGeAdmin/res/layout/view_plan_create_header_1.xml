<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res/com.znt.vodbox" 
     >
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar_1"
        />
    <RelativeLayout 
        android:id="@+id/view_plan_detail_broadcast_select"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:background="@drawable/sel_item_bg"
        >
        <TextView 
            android:id="@+id/sb_plan_detail_loop_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_black_on"
            android:text="插播广播"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingTop="12dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/sb_plan_detail_loop_hint"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/text_black_mid"
            android:text="每隔几首歌曲插播一次指定歌曲"
            />
        <com.znt.vodbox.view.SwitchButton
	     	style="@style/SwitchButton"
	        android:id="@+id/sb_plan_detail_broadcast"
	        android:checked="true"
	        app:withTextInterval="12dp"
	        app:frameDrawable="@drawable/switch_frame"
	        app:stateDrawable="@drawable/selector_switch_state"
	        app:stateMaskDrawable="@drawable/switch_state_mask"
	        app:sliderDrawable="@drawable/selector_switch_slider"
	        android:layout_width="fill_parent"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="8dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:textColor="@color/text_black_on"
	        android:textSize="@dimen/normal_text_size"
	        />
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar"
        />
    <com.znt.vodbox.view.ItemTextView
	        android:id="@+id/itv_plan_detail_broadcast_count"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="10dp"
	    	android:visibility="gone"
	        ></com.znt.vodbox.view.ItemTextView>
    <com.znt.vodbox.view.ItemTextView
	        android:id="@+id/itv_plan_detail_broadcast_music"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="10dp"
	    	android:visibility="gone"
	        ></com.znt.vodbox.view.ItemTextView>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar"
        />
</LinearLayout>