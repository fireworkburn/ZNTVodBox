<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="bottom"
    android:id="@+id/view_song_coin_edit_dialog_bg"
    android:background="@color/transparent">
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:paddingBottom="26dp"
    	android:gravity="center_vertical"
    	android:background="@color/white"
        >
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="22dp"
            android:paddingBottom="2dp"
            >
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                >
                <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerInParent="true"
	                android:textColor="@color/text_black_on"
	                android:textSize="@dimen/normal_text_size"
	                android:text="插播"
	                />
                
                <TextView 
	                android:id="@+id/tv_song_coin_edit_total"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:textColor="@color/text_blue_on"
	                android:textSize="@dimen/sub_text_size"
	                />
            </RelativeLayout>
            
            <View 
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="@color/spacebar"
	            />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_black_on"
                android:textSize="@dimen/normal_text_size"
                android:text="请输入插播金币"
                android:paddingBottom="6dp"
                />
            <EditText 
                android:id="@+id/et_dialog_song_coin_edit"
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:padding="12dp"
	            android:gravity="center"
	            android:maxLength="3"
	            android:layout_gravity="center_horizontal"
	            android:textSize="@dimen/TitleTextSize"
	            android:background="@drawable/sel_edittext_bg"
	            android:inputType="number"
	            android:textStyle="bold"
	            android:textColor="@color/text_blue_on"
	            android:layout_marginBottom="20dp"
                />
        </LinearLayout>
        
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/spacebar"
            />
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView 
	            android:id="@+id/tv_song_coin_edit_cancel"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1.0"
	            android:layout_marginRight="4dp"
	            android:paddingTop="12dp"
	            android:paddingBottom="12dp"
	            android:textColor="@color/text_black_on"
	            android:text="取消"
	            android:clickable="true"
	            android:gravity="center_horizontal"
	            android:background="@drawable/sel_item_bg"
	            android:textSize="@dimen/normal_text_size"
	            />
	        <TextView 
	            android:id="@+id/tv_song_coin_edit_confirm"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1.0"
	            android:layout_marginLeft="4dp"
	            android:paddingTop="12dp"
	            android:paddingBottom="12dp"
	            android:textColor="@color/text_blue_on"
	            android:text="确认插播"
	            android:clickable="true"
	            android:gravity="center_horizontal"
	            android:background="@drawable/sel_item_bg"
	            android:textSize="@dimen/normal_text_size"
	            />
        </LinearLayout>
        
        
    </LinearLayout>
    

</LinearLayout>