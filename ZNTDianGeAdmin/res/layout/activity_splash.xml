<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" 
    >
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp"
        >
        
        <ImageView 
	        android:id="@+id/iv_app_init_bg"
	        android:layout_width="96dp"
	        android:layout_height="96dp"
	        android:scaleType="centerCrop"
	        android:layout_gravity="center_horizontal"
	        android:src="@drawable/logo"
	        />
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/LargeTextSize"
	        android:textColor="@color/text_black_on"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="6dp"
	        android:text="@string/app_name"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/normal_text_size"
	        android:textColor="@color/text_black_mid"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="6dp"
	        android:text="@string/slogan"
	        />
    </LinearLayout>
    
	<TextView 
        android:id="@+id/tv_splash_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_splash_copyright"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/text_black_mid"
        android:paddingBottom="10dp"
        />
	<TextView 
	    android:id="@+id/tv_splash_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="30dp"
        android:textColor="@color/text_black_mid"
        android:textSize="@dimen/small_text_size"
        android:text="copyright Â© 2015 zhunit.com all rights reserved"
        />
</RelativeLayout>