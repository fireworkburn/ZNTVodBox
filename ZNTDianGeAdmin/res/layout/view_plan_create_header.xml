<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res/com.znt.vodbox" 
     >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1.0"
		        android:paddingTop="2dp"
		        android:paddingLeft="12dp"
		        android:paddingRight="12dp"
		        android:layout_marginRight="2dp"
		        android:orientation="vertical"
		        android:layout_gravity="center_vertical"
		        android:background="@drawable/style_item_bg_off"
		        >
		        
                <LinearLayout 
                    android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="horizontal"
                    >
                    <qh2.view.scroller.WheelView
			          android:id="@+id/vh_time_select_hour"
			          android:layout_width="0dp"
			          android:layout_height="150dp"
			          android:layout_weight="1.0"
			          />
			        
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_vertical|center_horizontal"
			            android:textSize="@dimen/TitleTextSize"
			            android:textColor="@color/text_black_on"
			            android:textStyle="bold"
			            android:text=":"
			            android:visibility="gone"
			            />
			        
			        <qh2.view.scroller.WheelView
			          android:id="@+id/vh_time_select_min"
			          android:layout_width="0dp"
			          android:layout_height="fill_parent"
			          android:layout_weight="1.0"
			          />
                </LinearLayout>
		        
		    </LinearLayout>
            <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1.0"
		        android:paddingTop="2dp"
		        android:paddingLeft="12dp"
		        android:paddingRight="12dp"
		        android:orientation="vertical"
		        android:layout_marginLeft="2dp"
		        android:layout_gravity="center_vertical"
		        android:background="@drawable/style_item_bg_off"
		        >
		       
                <LinearLayout 
                    android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="horizontal"
                    >
                    <qh2.view.scroller.WheelView
			          android:id="@+id/vh_time_select_hour_end"
			          android:layout_width="0dp"
			          android:layout_height="150dp"
			          android:layout_weight="1.0"
			          />
			        
			        <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_vertical|center_horizontal"
			            android:textSize="@dimen/TitleTextSize"
			            android:textColor="@color/text_black_on"
			            android:textStyle="bold"
			            android:text=":"
			            android:visibility="gone"
			            />
			        
			        <qh2.view.scroller.WheelView
			          android:id="@+id/vh_time_select_min_end"
			          android:layout_width="0dp"
			          android:layout_height="fill_parent"
			          android:layout_weight="1.0"
			          />
                </LinearLayout>
		    </LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="6dp"
            >
            <TextView 
	            android:id="@+id/tv_plan_create_plan_time"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="2dp"
	            android:paddingBottom="2dp"
	            android:textSize="@dimen/title_text_size"
	            android:gravity="center_horizontal"
	            android:textColor="@color/text_black_on"
	            />
	        
	         <TextView 
	            android:id="@+id/tv_plan_create_time_hint"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:textSize="@dimen/SmallTextSize"
	            android:textColor="@color/red"
	            android:text="时间有重叠，请重新选择"
	            android:visibility="gone"
	            />
        </LinearLayout>
        
        <TextView 
            android:id="@+id/tv_plan_create_album"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonTranslucent_2"
            android:layout_marginTop="18dp"
            android:textSize="@dimen/normal_text_size"
            android:text="点击添加歌单"
            android:gravity="center_horizontal"
            android:textColor="@color/text_black_on"
            android:visibility="gone"
            />
        
    </LinearLayout>
		<View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar_1"
        />
</LinearLayout>