<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white"
    android:clickable="true"
    >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >
        
        <TextView 
            android:id="@+id/tv_shop_detail_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/LargeTextSize"
            android:textColor="@color/text_black_on"
            android:drawableRight="@drawable/icon_shop_name_edit"
            android:background="@drawable/sel_item_bg"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            />
        
        <!-- <RelativeLayout 
            android:id="@+id/view_shop_detail_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_item_bg"
            android:padding="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_shop_detail_header_name"
            >
            <ImageView 
	            android:layout_width="22dp"
	            android:layout_height="22dp"
	            android:layout_centerInParent="true"
	            android:src="@drawable/icon_edit"
	            />
        </RelativeLayout> -->
        
        <TextView 
            android:id="@+id/tv_shop_detail_header_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shop_detail_header_name"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/text_black_mid"
            />
        <TextView 
            android:id="@+id/tv_shop_detail_header_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shop_detail_header_song"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/text_black_off"
            />
        <TextView 
            android:id="@+id/tv_shop_detail_header_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shop_detail_header_ip"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/text_black_mid"
            />
        <TextView 
	           android:id="@+id/tv_shop_detail_header_addr"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignParentLeft="true"
	           android:layout_below="@+id/tv_shop_detail_header_end_time"
	           android:textSize="@dimen/small_text_size"
	           android:textColor="@color/text_black_mid"
	           android:paddingBottom="6dp"
	           />
        <RelativeLayout 
            android:id="@+id/view_shop_detail_header_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_item_bg"
            android:padding="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_shop_detail_header_addr"
            android:visibility="gone"
            >
            <ImageView 
	            android:id="@+id/iv_shop_detail_header_addr"
	            android:layout_width="26dp"
	            android:layout_height="26dp"
	            android:layout_centerInParent="true"
	            android:src="@drawable/icon_location_on"
	            />
        </RelativeLayout>
        
        
    </RelativeLayout>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	    <TextView 
	        android:id="@+id/tv_shop_detail_header_song_count"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="12dp"
	        android:textSize="@dimen/small_text_size"
	        android:textColor="@color/text_black_on"
	        />
	        <TextView 
		        android:id="@+id/tv_shop_detail_header_videowhirl"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="4dp"
		        android:padding="8dp"
		        android:textSize="@dimen/SmallTextSize"
		        style="@style/ButtonTranslucent_1"
		        android:text="方向"
		        android:textColor="@color/text_blue_on"
		        android:layout_toLeftOf="@+id/tv_shop_detail_header_volume"
		        />
	        <TextView 
		        android:id="@+id/tv_shop_detail_header_volume"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="4dp"
		        android:padding="8dp"
		        android:textSize="@dimen/SmallTextSize"
		        style="@style/ButtonTranslucent_1"
		        android:text="音量"
		        android:textColor="@color/text_blue_on"
		        android:layout_toLeftOf="@+id/tv_shop_detail_header_song_push"
		        />
		    <TextView 
		        android:id="@+id/tv_shop_detail_header_song_push"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="4dp"
		        android:padding="8dp"
		        android:textSize="@dimen/SmallTextSize"
		        style="@style/ButtonTranslucent_1"
		        android:text="插播"
		        android:textColor="@color/text_blue_on"
		        android:layout_toLeftOf="@+id/tv_shop_detail_header_song_recommand"
		        />
		    <TextView 
		        android:id="@+id/tv_shop_detail_header_song_recommand"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="4dp"
		        android:padding="8dp"
		        android:textSize="@dimen/SmallTextSize"
		        style="@style/ButtonTranslucent_1"
		        android:text="推荐"
		        android:textColor="@color/text_blue_on"
		        android:layout_alignParentRight="true"
		        />
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/spacebar_0"
        />
</LinearLayout>