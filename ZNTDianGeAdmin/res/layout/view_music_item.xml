<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        
        <RelativeLayout 
            android:id="@+id/view_music_item_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/view_music_operation"
            android:background="@drawable/sel_item_bg"
	        android:paddingTop="8dp"
	        android:paddingBottom="6dp"
            >
            <ImageView 
	            android:id="@+id/iv_music_icon"
	            android:layout_width="52dp"
	            android:layout_height="52dp"
	            android:padding="6dp"
	            android:layout_centerVertical="true"
	            android:src="@drawable/icon_music"
	            android:scaleType="centerCrop"
	            />
	        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/iv_music_icon"
	            android:layout_centerVertical="true"
	            android:orientation="vertical"
	            >
	            <TextView 
		            android:id="@+id/tv_music_name"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/normal_text_size"
		            android:textColor="@color/text_black_on"
		            android:singleLine="true"
		            />
		        <TextView 
		            android:id="@+id/tv_music_artist"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="5dp"
		            android:textSize="@dimen/sub_text_size"
		            android:textColor="@color/text_black_mid"
		            android:singleLine="true"
		            />
	        </LinearLayout>
        </RelativeLayout>
        
       <RelativeLayout 
           	android:id="@+id/view_music_operation"
           	android:layout_width="62dp"
        	android:layout_height="fill_parent"
        	android:layout_alignTop="@+id/view_music_item_content"
        	android:layout_alignBottom="@+id/view_music_item_content"
        	android:layout_alignParentRight="true"
           	android:orientation="horizontal"
           	android:background="@drawable/sel_item_bg"
	       	android:paddingTop="6dp"
	       	android:paddingBottom="6dp"
	       	android:clickable="true"
	        >
           <ImageView 
               android:id="@+id/iv_music_item_edit"
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:src="@drawable/icon_song_item_delete"
               android:layout_centerInParent="true"
               />
       </RelativeLayout>
       <LinearLayout 
           	android:id="@+id/view_music_operation_edit"
           	android:layout_width="62dp"
        	android:layout_height="fill_parent"
        	android:layout_alignTop="@+id/view_music_item_content"
        	android:layout_alignBottom="@+id/view_music_item_content"
        	android:layout_alignParentRight="true"
           	android:orientation="vertical"
	        >
	        <RelativeLayout 
	            android:id="@+id/view_my_music_add"
	            android:layout_width="fill_parent"
	            android:layout_height="0dp"
	            android:orientation="horizontal"
	            android:layout_weight="1.0"
	            android:clickable="true"
	       		android:background="@drawable/sel_item_bg"
	            >
	            <ImageView 
	               android:layout_width="24dp"
	               android:layout_height="24dp"
	               android:src="@drawable/icon_song_item_add"
	               android:layout_centerInParent="true"
	               />
	        </RelativeLayout>
	        <RelativeLayout 
	            android:id="@+id/view_my_music_delete"
	            android:layout_width="fill_parent"
	            android:layout_height="0dp"
	            android:orientation="horizontal"
	            android:layout_weight="1.0"
	            android:clickable="true"
	       		android:background="@drawable/sel_item_bg"
	            >
	            <ImageView 
	               android:layout_width="24dp"
	               android:layout_height="24dp"
	               android:src="@drawable/icon_song_item_delete"
	               android:layout_centerInParent="true"
	               />
	        </RelativeLayout>
           
       </LinearLayout>
            
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/spacebar"
        />

    
</LinearLayout>